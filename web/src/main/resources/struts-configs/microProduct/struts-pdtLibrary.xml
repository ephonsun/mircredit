<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="pdtLibrary" extends="default"
		namespace="/pdtLibrary">

		<!-- 产品知识库列表页面 -->
		<!-- 展示产品知识库节点和叶子列表 -->
		<action name="showPdtLibraryList" class="pdtLibraryAction" method="showPdtLibraryList">
			<result name="success">/velocity/microProduct/showPdtLibraryList.vm</result>
			<result name="error">/velocity/error.vm</result>
		</action>
		
		<!-- 查询产品知识库叶子列表 -->
		<action name="queryPdtLibraryList" class="pdtLibraryAction" method="queryPdtLibraryList">
			<result name="success">/velocity/microProduct/pdtLibraryList.vm</result>
			<result name="error">/velocity/error.vm</result>
		</action>
		
		<!-- 移动(上移或下移)产品知识库节点 -->
		<action name="movePdtLibraryNode" class="pdtLibraryAction" method="movePdtLibraryNode">
			<result name="success">/velocity/microProduct/showPdtLibraryList.vm</result>
			<result name="error">/velocity/error.vm</result>
		</action>
		
		<!-- 跳转到新增页面 -->
		<action name="toAddPdtLibraryPage" class="pdtLibraryAction" method="toAddPdtLibraryPage">
			<result name="success">/velocity/microProduct/addPdtLibrary.vm</result>
			<result name="error">/velocity/error.vm</result>
		</action>
		
		<!-- 跳转到编辑页面 -->
		<action name="toEditPdtLibraryPage" class="pdtLibraryAction" method="toEditPdtLibraryPage">
			<result name="success">/velocity/microProduct/editPdtLibrary.vm</result>
			<result name="error">/velocity/error.vm</result>
		</action>
		
		<!-- 保存产品知识库分类 -->
		<action name="savePdtLibrary" class="pdtLibraryAction" method="savePdtLibrary">
			<result name="success">/velocity/microProduct/showPdtLibraryList.vm</result>
			<result name="error">/velocity/error.vm</result>
		</action>
		
		<!-- 删除产品知识库分类 -->
		<action name="delPdtLibrary" class="pdtLibraryAction" method="delPdtLibrary">
			<result name="success">/velocity/microProduct/showPdtLibraryList.vm</result>
			<result name="error">/velocity/error.vm</result>
		</action>
		
		<!-- 删除产品知识库叶子 -->
		<action name="delLeafPdtLibrary" class="pdtLibraryAction" method="delLeafPdtLibrary">
			<result name="success">/velocity/microProduct/showPdtLibraryList.vm</result>
			<result name="error">/velocity/error.vm</result>
		</action>
		
		<!-- 跳转到新增叶子页面 -->
		<action name="toAddLeafPdtLibraryPage" class="pdtLibraryAction" method="toAddLeafPdtLibraryPage">
			<result name="success">/velocity/microProduct/addLeafPdtLibrary.vm</result>
			<result name="error">/velocity/error.vm</result>
		</action>
		
		<!-- 跳转到编辑叶子页面 -->
		<action name="toEditLeafPdtLibraryPage" class="pdtLibraryAction" method="toEditLeafPdtLibraryPage">
			<result name="success">/velocity/microProduct/editLeafPdtLibrary.vm</result>
			<result name="error">/velocity/error.vm</result>
		</action>
		
		<!-- 跳转到查看叶子页面 -->
		<action name="toViewLeafPdtLibraryPage" class="pdtLibraryAction" method="toViewLeafPdtLibraryPage">
			<result name="success">/velocity/microProduct/viewLeafPdtLibrary.vm</result>
			<result name="error">/velocity/error.vm</result>
		</action>
		
		<!-- 加载知识分类树JSON -->
		<action name="loadPdtLibraryTreeJson" class="pdtLibraryAction" method="loadPdtLibraryTreeJson">
			<result name="success">/velocity/microProduct/showPdtLibraryList.vm</result>
			<result name="error">/velocity/error.vm</result>
		</action>
		
		<!-- 验证产品知识库叶子数据 -->
		<action name="verifyLeafPdtLibrary" class="pdtLibraryAction" method="verifyLeafPdtLibrary">
			<result name="success">/velocity/microProduct/showPdtLibraryList.vm</result>
			<result name="error">/velocity/error.vm</result>
		</action>
		
		<!-- 保存产品知识库叶子 -->
		<action name="saveLeafPdtLibrary" class="pdtLibraryAction" method="saveLeafPdtLibrary">
			<result name="success">/velocity/microProduct/showPdtLibraryList.vm</result>
			<result name="error">/velocity/error.vm</result>
		</action>
		
		<!-- 保存产品知识附件 -->
		<action name="uploadPdtLibraryAttachment" class="pdtLibraryAction" method="uploadPdtLibraryAttachment">
			<result name="success">/velocity/microProduct/showPdtLibraryList.vm</result>
			<result name="error">/velocity/error.vm</result>
		</action>
		
		<!-- 删除产品知识附件 -->
		<action name="delPdtLibraryAttachment" class="pdtLibraryAction" method="delPdtLibraryAttachment">
			<result name="success">/velocity/microProduct/showPdtLibraryList.vm</result>
			<result name="error">/velocity/error.vm</result>
		</action>
		
		<!-- 下载产品知识附件 -->
		<action name="downloadPdtLibraryAttachment" class="pdtLibraryAction" method="downloadPdtLibraryAttachment">
			<result name="success">/velocity/microProduct/showPdtLibraryList.vm</result>
			<result name="error">/velocity/error.vm</result>
		</action>
		
	</package>

</struts>