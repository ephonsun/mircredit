<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="inform" extends="default" namespace="/inform" >
        <action name="getInformInfo" class="informAction" method="getInformInfo">
            <result name="success">/velocity/inform/inform.vm</result>
            <result name="error">/velocity/error.vm</result>
        </action>
        <action name="updateInform" class="informAction" method="updateInform">
            <result name="success">/velocity/inform/inform.vm</result>
            <result name="error">/velocity/error.vm</result>
        </action>
	</package>
</struts>