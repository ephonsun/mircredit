	</tool>
	<tool>
		<key>moneyUtil</key>
		<scope>application</scope>
		<class>com.banger.mobile.util.MoneyUtil</class>
	</tool>
	<tool>
		<key>stringUtil</key>
		<scope>application</scope>
		<class>com.banger.mobile.util.BangerStringUtil</class>
	</tool>
	<tool>
		<key>subString</key>
		<scope>application</scope>
		<class>com.banger.mobile.util.StringUtil</class>
	</tool>
	<tool>
		<key>dateString</key>
		<scope>application</scope>
