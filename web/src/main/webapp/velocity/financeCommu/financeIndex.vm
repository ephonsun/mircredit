#parse("/velocity/taglibs.vm")<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd"><html xmlns="http://www.w3.org/1999/xhtml"><head>    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />    <title>首页</title>    <link type="text/css" rel="stylesheet" href="${ctx}/css/basic.css" />    <link type="text/css" rel="stylesheet" href="${ctx}/css/public.css" />    <style>	.bg{ background:#E3EAF4;}	</style>	#scriptLink("core")    #scriptLink("page")    <script type="text/javascript" src="${ctx}/js/system/b.base.js"></script>   	<script type="text/javascript" src="${ctx}/js/controls/jquery.etabs-v1.0.js"></script>	<script type="text/javascript" src="${ctx}/js/banger/banger.tabs-v1.0.js"></script>	<script type="text/javascript" src="${ctx}/js/banger/banger.tabs-v1.interface.js"></script>	<script type="text/javascript" src="${ctx}/js/controls/jquery.bgiframe-v1.0.js"></script>	<script type="text/javascript" src="${ctx}/js/controls/jquery.validator-v1.0.js"></script>    <script type="text/javascript">		var tempId='$!templateId';    	$(function(){			$('div.etabs').etabs({				'head': 'etabs-items',				'body': 'etabs-body',				'bar': 'etabs-bar',				onclick: tabOnclick			});			$("#themtCard_"+tempId).load("../commTheme/getCommThemeListPage.html?partitionId=$!partitionId&templateId="+tempId+"&templateUserId=$!templateUserId&random="+Math.random());		});		function tabOnclick(h, b){			var id = b.attr("id");			var tid=b.attr("tid");			var uid=b.attr("uid")			$("#"+id).load("../commTheme/getCommThemeListPage.html?partitionId=$!partitionId&templateId="+tid+"&templateUserId="+uid+"&random="+Math.random());		}				//查看帖子		function themeDetail(themeType,themeId,templateUserId){			var url="";    		var title="";    		var id="";		jQuery.post('../commTheme/isCommThemeDel.html?random='+Math.random(),{'theme.themeId':themeId},function(date){			if(date==0){				banger.page.showMessageBox("帖子已被删除!");				return false;			}else{				if(themeType==1){//主题				title="查看帖子";			url="../commTheme/themeDetail.html?theme.themeId="+themeId+"&templateUserId="+templateUserId+"&random="+Math.random();			id="commThemePage_detail_"+themeId;			tab.add({id: id, pid: GetId(), title: title, url: url, lock: false});            		}else{//投票主题				title="查看帖子";				url="../commTheme/themeOptionDetail.html?theme.themeId="+themeId+"&templateUserId="+templateUserId+"&random="+Math.random();				id="commThemePage_detail_"+themeId;				tab.add({id: id, pid: GetId(), title: title, url: url, lock: false});			}        			upReadCount(themeId);			}			});		}		function upReadCount(themeId){			jQuery.post('../commTheme/updateReadCount.html?random='+Math.random(),{'theme.themeId':themeId},function(){});		}				function panel(pid,flag){			var url="";    		var title="";    		var id="";    		if(flag==1){				title="我的主题";    		}else if(flag==2){				title="我的帖子";			}else if(flag==3){				title="收藏主题";			}else if(flag==0){				title="管理面板-$!partition.partitionName";			}			url="../commTheme/getThemePanelPage.html?partitionId="+pid+"&panelFlag="+flag+"&random="+Math.random();    		id="themePanel_"+flag;			tab.add({id: id, pid: GetId(), title: title, url: url, lock: false});		}    </script></head><body>	<div class="ui-exchangearea-homePage">		<div class="ui-exchangearea-banner">			<h4>				<label class="fl">$!partition.partitionName</label>				#if($!userId==$!partition.userId)				<a href="javascript:void(0);" onclick="panel($!partitionId,0)" class="managerpanel fr" title="管理面板">管理面板</a>				#end			</h4>			<p>				<span>主题：<label class="red">$!partitionThemeCount</label></span>				<span class="delimiter">|</span>				<span>帖子：<label class="red">$!partitionReplyCount</label></span>			</p>			<p>				<span class="fl">版主：<label>$!partition.userName</label></span>				<span class="ownerDetail fr">					<label>$!userName：</label>					<a href="javascript:void(0);" onclick="panel($!partitionId,1)" class="ml">主题($!themeCount)</a>					<a href="javascript:void(0);" onclick="panel($!partitionId,2)" class="ml">帖子($!replyCount)</a>					<a href="javascript:void(0);" onclick="panel($!partitionId,3)" class="ml">收藏夹($!collectCount)</a>				</span>			</p>		</div>				<div class="etabs">			<div class="etabs-head">				<div class="etabs-head-items">					<ul id="etabs-items">						#foreach($temp in $!templateList)							<li><label>$!temp.templateName</label></li>						#end					</ul>				</div>			</div>			<div id="etabs-body" class="etabs-body">				#foreach($temp in $!templateList)					<div class="etabs-body-child" id="themtCard_$!temp.templateId" tid="$!temp.templateId" uid="$!temp.createUser"></div>				#end			</div>				</div>	</div>	</body></html>