<table class="htmlTable" width="100%" border="0" cellpadding="0" cellspacing="0">
	<tbody>
        <tr>
        	<td colspan="8"><hr /> </td>
        </tr>
    	<tr>
            <td width="10%" align="right" nowrap="nowrap">新建时间：</td>
        	<td colspan="3">
                <div class="dtxt2 floatL" style="width: 100px;" >
                	<input id="createDate" name="condition.createDate" value="$!condition.createDate" readonly=true type="text" maxLength=10 dateFlag="true" class="validate[custom[date]] dtxt2-txt" />
                    <span class="dtxt2-date">date</span>
                </div>
                <label class="dash">—</label>
                <div class="dtxt2 floatL" style="width: 100px;" >
                	<input id="createDateEnd" name="condition.createDateEnd" value="$!condition.createDateEnd" readonly=true type="text" maxLength=10 dateFlag="true" class="validate[custom[date]] dtxt2-txt" />
                    <span class="dtxt2-date">date</span>
                </div>
            </td>
            <td width="10%" align="right" nowrap="nowrap">修改时间：</td>
        	<td colspan="3">
                <div class="dtxt2 floatL" style="width: 100px;" >
                	<input id="updateDate" name="condition.updateDate" value="$!condition.updateDate" readonly=true type="text" maxLength=10 dateFlag="true" class="validate[custom[date]] dtxt2-txt" />
                    <span class="dtxt2-date">date</span>
                </div>
                <label class="dash">—</label>
                <div class="dtxt2 floatL" style="width: 100px;" >
                	<input id="updateDateEnd" name="condition.updateDateEnd" value="$!condition.updateDateEnd" readonly=true type="text" maxLength=10 dateFlag="true" class="validate[custom[date]] dtxt2-txt" />
                    <span class="dtxt2-date">date</span>
                </div>
            </td>
        </tr>
        #if($inChargeof)
	        <tr>
	            <td width="10%" align="right" nowrap="nowrap">新建者：</td>
	        	<td width="15%">
	                <div id="createUserTree" class="dtxt2 fl" style="width: 150px;">
	                    <input type="text" id="createUserName" class="dtxt2-txt" readonly="readonly" id="userTree"/>
	                    <input type="hidden" id="createUser" name="condition.createUser" value="$!condition.createUser" />
	                    <span class="dtxt2-ddl" id="ddlchange">ddl</span>
	                </div>
	            </td>
	           	<td width="10%" align="right" nowrap="nowrap">最后修改者：</td>
	        	<td width="15%">
	                <div id="updateUserTree" class="dtxt2 fl" style="width: 150px;">
	                    <input type="text" id="updateUserName" class="dtxt2-txt" readonly="readonly" id="userTree"/>
	                    <input type="hidden" id="updateUser" name="condition.updateUser" value="$!condition.updateUser" />
	                    <span class="dtxt2-ddl" id="ddlchange">ddl</span>
	                </div>
	            </td>
	            <td colspan="4" ></td>
	        </tr>
        #end
    </tbody>
</table>	