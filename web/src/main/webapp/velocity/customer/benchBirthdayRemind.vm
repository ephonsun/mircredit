    		                		#if($urlPermitUtil.hasPermission('toAddMms'))
                            		<i class="i mms" title="彩信" onclick="sendMms('$!cus.mobilePhone1','$!cus.customerId')">mms</i>
                            		#end
                            	#elseif($!cus.mobilePhone2 != '')
