								#end
								#if($urlPermitUtil.hasPermission('tapePhone'))
                            	<i class="i dsc" title="座谈" onclick="tape('$!cus.customerId')">dsc</i>
								#end
                            	#if($!cus.mobilePhone1 != '')
                            		#if($urlPermitUtil.hasPermission('toAddSms'))
